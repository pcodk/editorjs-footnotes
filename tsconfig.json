{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "outDir": "./dist/",
    "noImplicitAny": false,
    "sourceMap": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ]
  },
  "typeRoots": ["./src/types", "./node_modules/@types"],
  "include": ["src/**/*", "editorjs.paragraph.d.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
